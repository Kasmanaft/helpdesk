.container-fluid
  .col-md-3
  .jumbotron.form
    %h2 Edit password
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put}) do |f|
      = devise_error_messages!
      .input-group
        %span.input-group-addon
          %span.glyphicon.glyphicon-envelope
        = f.email_field :email, class: "form-control", disabled: true
      .input-group
        %span.input-group-addon
          %span.glyphicon.glyphicon-eye-close
        = f.password_field :password, class: "form-control", placeholder: "Password"
      .input-group
        %span.input-group-addon
          %span.glyphicon.glyphicon-eye-close
        = f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation"
      .input-group
        %span.input-group-addon
          %span.glyphicon.glyphicon-eye-close
        = f.password_field :current_password, class: "form-control", placeholder: "Current password"
      = f.submit "Update", class: 'btn btn-warning'
  .col-md-3
